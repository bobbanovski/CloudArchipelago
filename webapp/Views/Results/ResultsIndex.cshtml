                                    <tr>
                                        <th>Project ID</th>
                                        <th>Project Name</th>
                                        <th>Project Start Date</th>
                                        <th>Get Details</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.ProjectID</td>
                                            <td>@item.ProjectName</td>
                                            <td>@item.ProjectDate</td>
                                            <td>@Ajax.ActionLink("->","AjaxVessels", new { id = item.ProjectID}, new AjaxOptions { HttpMethod = "Get", UpdateTargetId = "replaceMe", InsertionMode = InsertionMode.Replace } )</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
