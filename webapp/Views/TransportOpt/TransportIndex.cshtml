@model ICollection<SmartAdminMvc.ArchipelagoModel.TransProject>

@{
    ViewBag.Title = "TransportIndex";
}

<head>
    <style>
        #background {
            background-image: url('Transport.jpg');
            background-size: cover;
        }
    </style>
</head>
<div id="background">
    <div id="content">
        <div class="row">
            <div class="col-xs-12 col-sm-8 col-md-8 col-lg-8">
                <h1 class="page-title txt-color-blueDark semi-bold"><i class="fa-fw fa fa-truck"></i> Transport Optimisation <span>> Calculations on server with Windows Solver Foundation</span></h1>
            </div>
        </div>

        <h2>@Html.Raw(ViewBag.Flag)</h2>
        <h2>@Html.Raw(ViewBag.Error)</h2>
        <div id="DeleteOp">

        </div>
        <div id="CreateForm">
            <span class="btn btn-success btn-lg">
                @Ajax.ActionLink("Create New Project", "TransportCreate", new AjaxOptions { HttpMethod = "Get", UpdateTargetId = "CreateForm", InsertionMode = InsertionMode.Replace })
            </span>
        </div>
        <br />
        @*@Html.ActionLink("Create New Project", "TransportOpt", new { class = "btn btn-primary btn-lg" });*@
        <!-- widget grid -->
        <section id="widget-grid" class="">

            <!-- row -->
            <div class="row">
                <article class="col-sm-12 col-lg-4">
                    <!-- new widget -->
                    <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false" data-widget-togglebutton="false"
                         data-widget-fullscreenbutton="false" data-widget-colorbutton="false" data-widget-deletebutton="false" data-widget-sortable="false">
                        <!-- widget options:
                        usage: <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false">

                        data-widget-colorbutton="false"
                        data-widget-editbutton="false"
                        data-widget-deletebutton="false"
                        data-widget-fullscreenbutton="false"
                        data-widget-custombutton="false"
                        data-widget-collapsed="true"
                        data-widget-sortable="false"
                        -->
                        <header>
                            <span class="widget-icon"> <i class="glyphicon glyphicon-signal txt-color-darken"></i> </span>
                            <h2>Project List</h2>
                        </header>

                        <div @*class="no-padding"*@>
                            <div class="widget-body no-padding">
                                <!-- content -->
                                <table class="table table-striped table-bordered table-hover table.display" width="100%">
                                    <thead>
                                        <tr>
                                            <th>Project Name</th>
                                            <th>Project Start Date</th>
                                            <th>Optimised Transport Cost</th>
                                            <th>Delete Project</th>
                                            <th>Get Details</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var project in Model)
                                        {
                                            <tr>
                                                <td>@project.Name</td>
                                                <td>@project.Date</td>
                                                <td>@project.MinimisedCost</td>
                                                <td>@Ajax.ActionLink("Delete Project", "TransportDelete", new { id = project.TransprojectID }, new AjaxOptions { HttpMethod = "Get", UpdateTargetId = "DeleteOp", InsertionMode = InsertionMode.Replace })</td>
                                                <td>@Ajax.ActionLink("View Results", "TransportView", new { id = project.TransprojectID }, new AjaxOptions { HttpMethod = "Get", UpdateTargetId = "TransResults", InsertionMode = InsertionMode.Replace })</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                                <!-- end content -->
                            </div>
                        </div>
                    </div>
                </article>

                <div id="TransResults">
                    <div class="col-md-8">
                        <div class="well">
                            <div class="row">
                                <h1 class="semi-bold">The Transport Optimisation Problem</h1>
                                <p>The Transport Problem is an example of a network optimisation problem. Each of the connections between two nodes (a source and sink)
                                has an associated cost, thus the aim is to minimise the overall cost of supply to each of the sinks, based on the availability
                                of packages at the sources.</p>
                                <p>
                                    To begin, click "Create Project", download the excel template and randomise the data without adding any new rows or columns<br />
                                    Give the project a name and upload the template<br />
                                </p>
                                <p>
                                    The most optimal routes for the supply of a city will be determined based on the cost of delivery between nodes<br />
                                    
                                </p>
                            </div>
                            <br />
                            <h3>This solution was produced from the model up using Entity Framework.</h3>
                            <div class="row">
                                <div class="col-md-1"></div>
                                <div class="col-md-6"><img src="~/Content/img/demo/Transport.JPG" /></div>
                                <div class="col-md-1"></div>
                            </div>
                            <div class="row">
                                <h2>Reference</h2>
                                <a href="http://blog.sommer-forst.de/2012/07/05/solving-network-flow-models-a-walkthrough-1-theory/">Network Flow Models</a>
                            </div>
                        </div>
                    </div>
                </div> <!--End of Partial view-->
            </div>
        </section>
    </div>
</div>


