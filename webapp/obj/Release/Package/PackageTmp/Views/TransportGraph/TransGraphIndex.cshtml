
@{
    ViewBag.Title = "TransGraphIndex";
}

<div id="content">
    <div class="row">
        <div class="col-xs-12 col-sm-8 col-md-8 col-lg-8">
            <h1 class="page-title txt-color-blueDark semi-bold"><i class="fa-fw fa fa-truck"></i> Transport Optimisation <span>> Graphs by Chart.js</span></h1>
        </div>
    </div>

    <h2>@Html.Raw(ViewBag.Flag)</h2>
    <h2>@Html.Raw(ViewBag.Error)</h2>
    
    <!-- widget grid -->
    <section id="widget-grid" class="">

        <!-- row -->
        <div class="row">
            <article class="col-sm-12 col-lg-4">
                <!-- new widget -->
                <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false" data-widget-togglebutton="false"
                     data-widget-fullscreenbutton="false" data-widget-colorbutton="false" data-widget-deletebutton="false" data-widget-sortable="false">
                    <!-- widget options:
                    usage: <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false">

                    data-widget-colorbutton="false"
                    data-widget-editbutton="false"
                    data-widget-deletebutton="false"
                    data-widget-fullscreenbutton="false"
                    data-widget-custombutton="false"
                    data-widget-collapsed="true"
                    data-widget-sortable="false"
                    -->
                    <header>
                        <span class="widget-icon"> <i class="glyphicon glyphicon-signal txt-color-darken"></i> </span>
                        <h2>Project List</h2>
                    </header>

                    <div @*class="no-padding"*@>
                        <div class="widget-body no-padding">
                            <!-- content -->
                            <table class="table table-striped table-bordered table-hover table.display" width="100%">
                                <thead>
                                    <tr>
                                        <th>Project Name</th>
                                        <th>Project Start Date</th>
                                        <th>Optimised Transport Cost</th>
                                        <th>Get Details</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var project in Model)
                                    {
                                        <tr>
                                            <td>@project.Name</td>
                                            <td>@project.Date</td>
                                            <td>@project.MinimisedCost</td>
                                            <td>@Ajax.ActionLink("View Charts", "TransGraphView", new { id = project.TransprojectID }, new AjaxOptions { HttpMethod = "Get", UpdateTargetId = "TransGraphs", InsertionMode = InsertionMode.Replace })</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <!-- end content -->
                        </div>
                    </div>
                </div>
            </article>

            <div id="TransGraphs">
                <div class="col-md-8">
                    <div class="well">
                        <div class="row">
                            <h1 class="semi-bold">Visual Presentation of data</h1>
                            <p>
                                To begin, click "Create Project" and download the excel template and randomise the data without adding any new rows or columns<br />
                                Give the project a name and upload the template<br />
                            </p>
                            <p>
                                The most optimal routes for the supply of a state will be determined based on the cost of delivery to that state<br />
                                from a particular city
                            </p>

                        </div>
                        <br />
                        <div class="row">
                            <div class="col-md-1"></div>
                            <div class="col-md-6"><img src="~/Content/img/demo/Transport.JPG" /></div>
                            <div class="col-md-1"></div>
                        </div>
                    </div>
                </div>
            </div> <!--End of Partial view-->
        </div>
    </section>
</div>



